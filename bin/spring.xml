<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" 
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
    http://www.springframework.org/schema/beans 
    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">
    
	<bean id="triangle" class="org.confiz.javabrains.Triangle">
		<property name="points">
			<list>
				<ref bean="zeroPoint"/>
				<ref bean="point2"/>
				<ref bean="point3"/>
			</list>
		</property>
	</bean>
	
	<bean id="zeroPoint" class="org.confiz.javabrains.Point">
		<property name="x" value="0"></property>
		<property name="y" value="0"></property>
	</bean>
	
	<bean id="point2" class="org.confiz.javabrains.Point">
		<property name="x" value="-20"></property>
		<property name="y" value="0"></property>
	</bean>
	
	<bean id="point3" class="org.confiz.javabrains.Point">
		<property name="x" value="0"></property>
		<property name="y" value="-20"></property>
	</bean>
	
	<alias name="triangle" alias="triangle-alias"/>
	
</beans>