<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" 
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
    http://www.springframework.org/schema/beans 
    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">
    
	<bean id="triangle" class="org.confiz.javabrains.Triangle">
		<constructor-arg type="java.lang.String" value="Equilateral"></constructor-arg>
		<constructor-arg type="int" value="20"/>
	</bean>
	
	<bean id="triangle2" class="org.confiz.javabrains.Triangle">
		<constructor-arg index="0" value="Oscilloscope"></constructor-arg>
		<constructor-arg index="1" value="21"/>
	</bean>
</beans>